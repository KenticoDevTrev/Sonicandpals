<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="EpisodeID">
    <action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <massactions>
    <massaction name="#delete" caption="$general.delete$" behavior="OpenModal" />
  </massactions>
  <columns>
    <column source="EpisodeNumber" caption="Episode" wrap="false" localize="true">
      
    </column>
    <column source="EpisodeTitle" caption="Title" wrap="false" localize="true">
      <filter type="text" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="sap.episode" columns="EpisodeID, EpisodeNumber, EpisodeTitle" />
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>
