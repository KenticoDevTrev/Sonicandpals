{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
  "tasks": [
    {
      "label": "Less Compile",
      "type": "shell",
      "command": "lessc ./SaP/css/SaP.less ./SaP/css/SaP.css",
      "group": "build"
    },
    {
        "label": "Less Watch",
        "type": "shell",
        "command": "less-watch-compiler --source-map ./SaP/css ./SaP/css",
        "group": "build"
      }
  ]
}